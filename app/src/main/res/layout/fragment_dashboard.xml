<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_anchor="@+id/frameLayout6"
        app:layout_anchorGravity="center"
        tools:context=".DashboardFragment">


        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="300dp"
            android:layout_height="669dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.73">

            <ImageView
                android:id="@+id/teamsFerrari"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/profile_vrt_raw_bytes_1587515318_10187" />

            <ImageView
                android:id="@+id/teamsRed"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/red_bull_logo"
                app:layout_column="1"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/teamsMercedes"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/transferir"
                app:layout_column="1"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/teamsMc"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/images__1_"
                app:layout_column="0"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/teamsAlpha"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/a1582650557134"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/teamsAston"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/aston_martin"
                app:layout_column="1"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/teamsAlpine"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/alpine"
                app:layout_column="0"
                app:layout_row="4"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/teamsAlphaR"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/alphar"
                app:layout_column="1"
                app:layout_row="4"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/teamsWilliams"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/wi"
                app:layout_column="1"
                app:layout_row="3"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/teamsHaas"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/haas"
                app:layout_column="0"
                app:layout_row="3"
                tools:src="@tools:sample/avatars" />

        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F44336"
        app:layout_anchor="@+id/frameLayout6"
        app:layout_anchorGravity="top|center"
        app:tabIndicatorColor="#673AB7">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teams" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_pilot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilots" />

    </com.google.android.material.tabs.TabLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>