<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/race_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/race_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/race_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/race_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/race_image"
            android:layout_toRightOf="@+id/race_image"
            android:textAllCaps="true"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/race_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/race_name"
            android:layout_toEndOf="@+id/race_image"
            android:layout_toRightOf="@+id/race_image"
            android:textColor="#333"
            />
    </LinearLayout>

</LinearLayout>