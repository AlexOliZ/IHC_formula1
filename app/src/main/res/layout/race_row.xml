<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/race_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout android:id="@+id/race_info"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:layout_below="@+id/race_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:clickable="true">
        <ImageView
            android:id="@+id/race_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:maxWidth="300dp" />

        <CheckBox
            android:id="@+id/notify_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="182dp"
            android:background="@color/white"
            android:button="@drawable/notification_box" />

        <LinearLayout
            android:id="@+id/race_text"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/race_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/race_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#333"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/race_date"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/race_name"
                android:layout_gravity="center"
                android:textColor="#333"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>